{
  "name": "@notty/app",
  "version": "1.0.0",
  "description": "Main Electron application for Notty",
  "main": "dist-electron/main.js",
  "type": "module",
  "private": true,
  "author": {
    "name": "Notty Team",
    "email": "team@notty.app"
  },
  "scripts": {
    "dev": "cd ../config && vite",
    "build": "tsc && cd ../config && vite build && electron-builder",
    "build:dir": "tsc && cd ../config && vite build && electron-builder --dir",
    "preview": "cd ../config && vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"cd ../config && vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build",
    "clean": "rm -rf dist dist-electron build"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "bufferutil": "^4.0.9",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.515.0",
    "monaco-languageclient": "^8.1.1",
    "node-pty": "^1.1.0-beta34",
    "pyright": "^1.1.380",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript-language-server": "^4.3.2",
    "utf-8-validate": "^6.0.5",
    "vscode-languageserver-protocol": "^3.17.5",
    "ws": "^8.16.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.notty.app",
    "productName": "Notty",
    "homepage": "https://github.com/notty/notty",
    "electronVersion": "28.2.0",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
